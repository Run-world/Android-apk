<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpeedTest"
    android:orientation="vertical">

    <com.um.speedtest.MyView
	android:id="@+id/line"
	android:layout_width="1024dp"
	android:layout_height="350dp"
	android:layout_gravity="center"
	android:background="@android:color/transparent" />
    
    <LinearLayout
       		 android:layout_marginTop="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
		android:layout_gravity="center"
                android:orientation="horizontal"
                 >
    <Button
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/btn_speed"
            android:layout_marginTop="15dp"
	    android:focusable="true"
	    android:textSize="35sp"
	    android:text="@string/begin_test"/>

    <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:orientation="vertical" >
                        <TextView
                            android:id="@+id/current_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/current_network_speed"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/now_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="15dp" >

                        <TextView
                            android:id="@+id/average"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/average_network_speed"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/average_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="15dp" >

                        <TextView
                            android:id="@+id/max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/max_network_speed"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/max_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp" />
            </LinearLayout>


	
</LinearLayout>
</LinearLayout>
